.information {
  z-index: 99;
  width: 100%;
  height: 280rpx;
  background-color: #36bca8;
  padding-top: 10rpx;
  padding-top: 130rpx;
  height: 200rpx;
}
.information .setup {
  margin: 0 auto;
  width: 95%;
  height: 80rpx;
  color: #fff;
}
.information .setup text {
  font-size: 40rpx;
  float: right;
  line-height: 80rpx;
  margin-left: 45rpx;
}
.information .user {
  margin: 20rpx auto;
  width: 95%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.information .user .user-name {
  color: #fff;
}
.information .user .user-name view:nth-child(1) {
  font-size: 50rpx;
  margin: 10rpx 0;
}
.information .user .user-name view:nth-child(2) {
  font-size: 27rpx;
}
.information .user .suer-pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #fff;
  position: relative;
}
.information .user .suer-pic image {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 90%;
  height: 90%;
  border-radius: 50%;
}
.resume {
  padding-top: 270rpx;
  padding-top: 320rpx;
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  border-bottom: 10rpx solid #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.resume .resumelist {
  width: 130rpx;
  height: 160rpx;
  text-align: center;
}
.resume .resumelist .resuimg {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}
.resume .resumelist .resuimg image {
  width: 100%;
  height: 100%;
}
.resume .resumelist .resutext {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #1d1d1d;
}
.mine {
  margin: 0 auto;
  width: 95%;
  border-bottom: 1rpx solid #F1F1F1;
}
.mine .minelist {
  margin: 20rpx 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mine .minelist view:nth-child(1) {
  font-size: 33rpx;
}
.mine .minelist view:nth-child(1) text {
  margin-right: 20rpx;
}
.mibut {
  margin: 30rpx auto;
  width: 650rpx;
  height: 90rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #868686;
}

