.addjob {
  margin: 0 auto;
  width: 95%;
}
.title {
  font-size: 45rpx;
  font-weight: 700;
  margin-top: 30rpx;
}
.titlemin {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #808080;
}
.type {
  width: 100%;
  height: 120rpx;
  border-bottom: 2rpx solid #F1F1F1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #555555;
  font-size: 30rpx;
}
.type view:nth-child(2) {
  border: 2rpx solid #45CFFE;
  border-radius: 10rpx;
}
.type view:nth-child(2) text {
  width: 100rpx;
  display: inline-block;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #45CFFE;
}
.click {
  background-color: #45CFFE;
  border-radius: 10rpx;
  color: #FFFFFF !important;
}
.addlist {
  margin-top: 30rpx;
  width: 100%;
  border-bottom: 2rpx solid #F1F1F1;
}
.addlist .listtexi1 {
  font-size: 30rpx;
  color: #565656;
}
.addlist .listtexi2 {
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  color: #555555;
}
.but {
  height: 90rpx;
  color: #FFFFFF;
  background-color: #45CFFE;
  border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
  margin: 30rpx auto;
  width: 100%;
}
.buts {
  margin: 30rpx auto;
  width: 100%;
  height: 90rpx;
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
}
.buts .delete {
  text-align: center;
  line-height: 90rpx;
  width: 200rpx;
  height: 100%;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}
.buts .preservation {
  text-align: center;
  line-height: 90rpx;
  width: 470rpx;
  height: 100%;
  background-color: #45CFFE;
  color: #FFFFFF;
  border-radius: 10rpx;
}

